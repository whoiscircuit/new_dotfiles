[core]
	compression = 4
	fsmonitor = true

[pager]
	diff = delta
	branch = false
	tag = false

[init]
	defaultBranch = main

[diff]
	algorithm = histogram
	renames = copies
[commit]
	gpgSign = true

[branch]
	sort = -committerdate

[tag]
	sort = -taggerdate

[gpg]
	format = ssh

[status]
	showStash = true	

[push]
	autoSetupRemote = true
	followTags = true
[pull]
	rebase = true
	autoStash = true

[log]
	abbrevCommit = true
	graphColors = blue,yellow,cyan,magenta,green,red

[submodule]
	recurse = true
	recurseSubmodules = on-demand

[url "git@github.com:whoiscircuit/"]
	insteadOf = "me:"

[url "git@github.com:"]
	insteadOf = "github:"
	insteadOf = "gh:"

[url "git@gitlab.com:"]
	insteadOf = "gitlab:"
	insteadOf = "gl:"

